/* ============================================
   CYBERPUNK RED - Total Rombakan
   ============================================ */

@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap');

:root {
  /* Cyberpunk Red Palette */
  --neon-red: #ff003c;
  --neon-pink: #ff00ff;
  --neon-orange: #ff5e00;
  --dark-bg: #050505;
  --darker-bg: #020202;
  --card-bg: #0a0a0a;
  --panel-bg: #111111;
  
  --text-primary: #ffffff;
  --text-secondary: #a0a0a0;
  --text-dim: #555555;
  
  --grid-line: rgba(255, 0, 60, 0.1);
  --border-glow: rgba(255, 0, 60, 0.5);
  
  --font-display: 'Orbitron', sans-serif;
  --font-body: 'Rajdhani', sans-serif;
  
  --glitch-red: #ff003c;
  --glitch-cyan: #00ffff;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  background: var(--darker-bg);
}

body {
  font-family: var(--font-body);
  background: var(--dark-bg);
  color: var(--text-primary);
  line-height: 1.6;
  overflow-x: hidden;
  font-size: 16px;
  position: relative;
}

/* Scanline Effect */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 0, 0, 0.15),
    rgba(0, 0, 0, 0.15) 1px,
    transparent 1px,
    transparent 2px
  );
  pointer-events: none;
  z-index: 9999;
  opacity: 0.3;
}

/* Cyber Grid Background */
.cyber-grid {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(var(--grid-line) 1px, transparent 1px),
    linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
  background-size: 50px 50px;
  perspective: 1000px;
  transform-style: preserve-3d;
  animation: gridMove 20s linear infinite;
  pointer-events: none;
  z-index: -2;
}

@keyframes gridMove {
  0% { transform: translateY(0); }
  100% { transform: translateY(50px); }
}

/* Floating Particles */
.particles-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: -1;
  overflow: hidden;
}

.particle {
  position: absolute;
  width: 2px;
  height: 2px;
  background: var(--neon-red);
  border-radius: 50%;
  box-shadow: 0 0 10px var(--neon-red);
  animation: floatParticle 15s infinite;
}

@keyframes floatParticle {
  0%, 100% {
    transform: translateY(100vh) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(-100vh) rotate(720deg);
    opacity: 0;
  }
}

/* Container */
.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 30px;
}

/* ============================================
   NAVIGATION - CYBER STYLE
   ============================================ */

.cyber-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(5, 5, 5, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 2px solid var(--neon-red);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
}

.cyber-nav::before {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--neon-red), transparent);
  animation: scanline 3s linear infinite;
}

@keyframes scanline {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.nav-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80px;
}

/* Logo Glitch */
.cyber-logo {
  display: flex;
  align-items: center;
  gap: 15px;
  text-decoration: none;
  position: relative;
}

.logo-text {
  font-family: var(--font-display);
  font-size: 2rem;
  font-weight: 900;
  color: var(--text-primary);
  text-transform: uppercase;
  letter-spacing: 2px;
  position: relative;
  text-shadow: 
    0 0 10px var(--neon-red),
    0 0 20px var(--neon-red),
    0 0 40px var(--neon-red);
}

.logo-text::before,
.logo-text::after {
  content: 'ZAROFFC';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.logo-text::before {
  color: var(--glitch-cyan);
  animation: glitch-1 2s infinite linear alternate-reverse;
  clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
}

.logo-text::after {
  color: var(--neon-pink);
  animation: glitch-2 3s infinite linear alternate-reverse;
  clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
}

@keyframes glitch-1 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
}

@keyframes glitch-2 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(2px, -2px); }
  40% { transform: translate(2px, 2px); }
  60% { transform: translate(-2px, -2px); }
  80% { transform: translate(-2px, 2px); }
}

.logo-icon {
  font-size: 2rem;
  color: var(--neon-red);
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% { 
    filter: drop-shadow(0 0 5px var(--neon-red));
    transform: scale(1);
  }
  50% { 
    filter: drop-shadow(0 0 20px var(--neon-red));
    transform: scale(1.1);
  }
}

/* Nav Links */
.nav-links-cyber {
  display: flex;
  gap: 40px;
}

.nav-link-cyber {
  font-family: var(--font-display);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: var(--text-secondary);
  text-decoration: none;
  position: relative;
  padding: 10px 0;
  transition: all 0.3s;
}

.nav-link-cyber::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--neon-red);
  box-shadow: 0 0 10px var(--neon-red);
  transition: width 0.3s;
}

.nav-link-cyber:hover {
  color: var(--neon-red);
  text-shadow: 0 0 10px var(--neon-red);
}

.nav-link-cyber:hover::before {
  width: 100%;
}

/* Theme Toggle Cyber */
.theme-toggle-cyber {
  background: transparent;
  border: 2px solid var(--neon-red);
  color: var(--neon-red);
  padding: 10px 20px;
  font-family: var(--font-display);
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.theme-toggle-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: var(--neon-red);
  transition: left 0.3s;
  z-index: -1;
}

.theme-toggle-cyber:hover {
  color: var(--dark-bg);
  box-shadow: 0 0 20px var(--neon-red);
}

.theme-toggle-cyber:hover::before {
  left: 0;
}

/* ============================================
   BUTTONS - CYBER STYLE
   ============================================ */

.cyber-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 15px 30px;
  font-family: var(--font-display);
  font-size: 0.9rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  text-decoration: none;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.cyber-btn-primary {
  background: var(--neon-red);
  color: var(--dark-bg);
  box-shadow: 
    0 0 20px rgba(255, 0, 60, 0.4),
    inset 0 0 20px rgba(255, 255, 255, 0.1);
}

.cyber-btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 
    0 0 40px rgba(255, 0, 60, 0.6),
    0 0 80px rgba(255, 0, 60, 0.3);
}

.cyber-btn-secondary {
  background: transparent;
  color: var(--neon-red);
  border: 2px solid var(--neon-red);
}

.cyber-btn-secondary:hover {
  background: rgba(255, 0, 60, 0.1);
  box-shadow: 0 0 30px rgba(255, 0, 60, 0.3);
}

.cyber-btn::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 70%
  );
  transform: rotate(45deg) translateY(-100%);
  transition: transform 0.6s;
}

.cyber-btn:hover::after {
  transform: rotate(45deg) translateY(100%);
}

/* ============================================
   HERO SECTION - CYBER
   ============================================ */

.cyber-hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 120px 0 80px;
  position: relative;
  overflow: hidden;
}

.hero-content-cyber {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.hero-text-cyber {
  position: relative;
  z-index: 1;
}

.cyber-badge {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 10px 20px;
  background: rgba(255, 0, 60, 0.1);
  border: 1px solid var(--neon-red);
  font-family: var(--font-display);
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--neon-red);
  margin-bottom: 30px;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.cyber-badge::before {
  content: '';
  width: 8px;
  height: 8px;
  background: var(--neon-red);
  border-radius: 50%;
  animation: blink 1s infinite;
  box-shadow: 0 0 10px var(--neon-red);
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

.hero-title-cyber {
  font-family: var(--font-display);
  font-size: 4rem;
  font-weight: 900;
  line-height: 1.1;
  text-transform: uppercase;
  margin-bottom: 20px;
  position: relative;
}

.hero-title-cyber .glitch-text {
  color: var(--neon-red);
  position: relative;
  display: inline-block;
}

.hero-title-cyber .glitch-text::before,
.hero-title-cyber .glitch-text::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hero-title-cyber .glitch-text::before {
  color: var(--glitch-cyan);
  animation: glitch-1 2s infinite;
  clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
}

.hero-title-cyber .glitch-text::after {
  color: var(--neon-pink);
  animation: glitch-2 2s infinite;
  clip-path: polygon(0 55%, 100% 55%, 100% 100%, 0 100%);
}

.hero-subtitle-cyber {
  font-size: 1.3rem;
  color: var(--text-secondary);
  margin-bottom: 40px;
  line-height: 1.8;
  font-weight: 500;
}

.hero-buttons-cyber {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

/* Hero Visual - Cyber Card */
.hero-visual-cyber {
  position: relative;
}

.cyber-card {
  background: var(--card-bg);
  border: 2px solid var(--neon-red);
  padding: 30px;
  position: relative;
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
  box-shadow: 
    0 0 40px rgba(255, 0, 60, 0.2),
    inset 0 0 40px rgba(255, 0, 60, 0.05);
}

.cyber-card::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, var(--neon-red), transparent, var(--neon-red));
  z-index: -1;
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.card-header-cyber {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25px;
  padding-bottom: 20px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.3);
}

.status-cyber {
  display: flex;
  align-items: center;
  gap: 10px;
  font-family: var(--font-display);
  font-size: 0.9rem;
  color: #00ff00;
  text-transform: uppercase;
}

.status-cyber::before {
  content: '';
  width: 10px;
  height: 10px;
  background: #00ff00;
  border-radius: 50%;
  box-shadow: 0 0 10px #00ff00;
  animation: pulse 2s infinite;
}

.card-stats-cyber {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.stat-box-cyber {
  background: rgba(255, 0, 60, 0.05);
  border: 1px solid rgba(255, 0, 60, 0.3);
  padding: 20px;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.stat-box-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 0, 60, 0.1), transparent);
  transition: left 0.5s;
}

.stat-box-cyber:hover::before {
  left: 100%;
}

.stat-value-cyber {
  font-family: var(--font-display);
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--neon-red);
  text-shadow: 0 0 10px rgba(255, 0, 60, 0.5);
}

.stat-label-cyber {
  font-size: 0.8rem;
  color: var(--text-dim);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-top: 5px;
}

/* Floating Elements */
.float-cyber {
  position: absolute;
  background: var(--card-bg);
  border: 1px solid var(--neon-red);
  padding: 15px 20px;
  display: flex;
  align-items: center;
  gap: 10px;
  font-family: var(--font-display);
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
  animation: float-cyber 4s ease-in-out infinite;
}

.float-cyber i {
  color: var(--neon-red);
  font-size: 1.2rem;
}

.float-1 { top: -30px; right: -20px; animation-delay: 0s; }
.float-2 { bottom: 20px; left: -40px; animation-delay: 2s; }

@keyframes float-cyber {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15px); }
}

/* ============================================
   SECTIONS - CYBER
   ============================================ */

.cyber-section {
  padding: 100px 0;
  position: relative;
}

.section-header-cyber {
  text-align: center;
  margin-bottom: 60px;
}

.section-label {
  font-family: var(--font-display);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 3px;
  color: var(--neon-red);
  margin-bottom: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
}

.section-label::before,
.section-label::after {
  content: '';
  width: 50px;
  height: 2px;
  background: var(--neon-red);
  box-shadow: 0 0 10px var(--neon-red);
}

.section-title-cyber {
  font-family: var(--font-display);
  font-size: 3rem;
  font-weight: 800;
  text-transform: uppercase;
  margin-bottom: 20px;
}

.section-title-cyber span {
  color: var(--neon-red);
  text-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
}

/* Features Grid */
.features-grid-cyber {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
}

.feature-card-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  padding: 40px 30px;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.feature-card-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background: var(--neon-red);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s;
  box-shadow: 0 0 10px var(--neon-red);
}

.feature-card-cyber:hover {
  border-color: var(--neon-red);
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(255, 0, 60, 0.2);
}

.feature-card-cyber:hover::before {
  transform: scaleX(1);
}

.feature-icon-cyber {
  width: 70px;
  height: 70px;
  background: rgba(255, 0, 60, 0.1);
  border: 2px solid var(--neon-red);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 25px;
  font-size: 1.8rem;
  color: var(--neon-red);
  position: relative;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.feature-icon-cyber::after {
  content: '';
  position: absolute;
  inset: 5px;
  border: 1px solid var(--neon-red);
  opacity: 0.5;
}

.feature-card-cyber h3 {
  font-family: var(--font-display);
  font-size: 1.3rem;
  font-weight: 700;
  text-transform: uppercase;
  margin-bottom: 15px;
  letter-spacing: 1px;
}

.feature-card-cyber p {
  color: var(--text-secondary);
  line-height: 1.7;
  font-size: 1.05rem;
}

/* Stats Section */
.stats-cyber {
  background: var(--panel-bg);
  border-top: 1px solid rgba(255, 0, 60, 0.3);
  border-bottom: 1px solid rgba(255, 0, 60, 0.3);
  padding: 80px 0;
  position: relative;
}

.stats-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--neon-red), transparent);
  animation: scanline 4s linear infinite;
}

.stats-grid-cyber {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

.stat-item-cyber {
  text-align: center;
  padding: 30px;
  background: rgba(255, 0, 60, 0.05);
  border: 1px solid rgba(255, 0, 60, 0.2);
  position: relative;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.stat-number-cyber {
  font-family: var(--font-display);
  font-size: 3.5rem;
  font-weight: 900;
  color: var(--neon-red);
  text-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
  line-height: 1;
}

.stat-suffix {
  font-size: 1.5rem;
  color: var(--neon-red);
  font-weight: 700;
}

.stat-desc-cyber {
  font-family: var(--font-display);
  font-size: 0.9rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-top: 10px;
}

/* CTA Section */
.cta-cyber {
  padding: 100px 0;
  position: relative;
}

.cta-box {
  background: linear-gradient(135deg, rgba(255, 0, 60, 0.1) 0%, rgba(255, 0, 60, 0.05) 100%);
  border: 2px solid var(--neon-red);
  padding: 80px;
  text-align: center;
  position: relative;
  overflow: hidden;
  clip-path: polygon(30px 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0 30px);
}

.cta-box::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 10px,
    rgba(255, 0, 60, 0.03) 10px,
    rgba(255, 0, 60, 0.03) 20px
  );
  animation: moveStripes 20s linear infinite;
}

@keyframes moveStripes {
  0% { transform: translate(0, 0); }
  100% { transform: translate(50px, 50px); }
}

.cta-content {
  position: relative;
  z-index: 1;
}

.cta-icon-cyber {
  width: 100px;
  height: 100px;
  background: var(--neon-red);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30px;
  font-size: 2.5rem;
  color: var(--dark-bg);
  box-shadow: 0 0 40px rgba(255, 0, 60, 0.5);
  animation: pulse-glow 2s infinite;
}

.cta-box h2 {
  font-family: var(--font-display);
  font-size: 2.5rem;
  font-weight: 800;
  text-transform: uppercase;
  margin-bottom: 20px;
}

.cta-box p {
  font-size: 1.2rem;
  color: var(--text-secondary);
  margin-bottom: 40px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

/* ============================================
   PLANS PAGE - CYBER
   ============================================ */

.page-header-cyber {
  padding: 150px 0 80px;
  text-align: center;
  position: relative;
}

.plans-grid-cyber {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 30px;
  margin-bottom: 60px;
}

.plan-card-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.plan-card-cyber.featured {
  border-color: var(--neon-red);
  transform: scale(1.02);
  box-shadow: 0 0 40px rgba(255, 0, 60, 0.3);
}

.plan-card-cyber:hover {
  transform: translateY(-10px);
  border-color: var(--neon-red);
  box-shadow: 0 20px 40px rgba(255, 0, 60, 0.2);
}

.plan-card-cyber.featured:hover {
  transform: scale(1.02) translateY(-10px);
}

.plan-badge-cyber {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10px 25px;
  font-family: var(--font-display);
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  clip-path: polygon(0 0, 100% 0, 100% 100%, 10px 100%);
}

.badge-popular-cyber {
  background: var(--neon-red);
  color: var(--dark-bg);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
}

.badge-ultimate-cyber {
  background: var(--neon-pink);
  color: var(--dark-bg);
  box-shadow: 0 0 20px rgba(255, 0, 255, 0.5);
}

.plan-header-cyber {
  padding: 40px 30px;
  text-align: center;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  background: rgba(255, 0, 60, 0.05);
}

.plan-icon-cyber {
  width: 80px;
  height: 80px;
  background: rgba(255, 0, 60, 0.1);
  border: 2px solid var(--neon-red);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  font-size: 2rem;
  color: var(--neon-red);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
}

.plan-name-cyber {
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 15px;
}

.plan-price-cyber {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 5px;
}

.price-currency-cyber {
  font-family: var(--font-display);
  font-size: 1.2rem;
  color: var(--text-dim);
}

.price-amount-cyber {
  font-family: var(--font-display);
  font-size: 3.5rem;
  font-weight: 900;
  color: var(--neon-red);
  text-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
  line-height: 1;
}

.plan-specs-cyber {
  padding: 30px;
}

.spec-row-cyber {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 0;
  border-bottom: 1px solid rgba(255, 0, 60, 0.1);
}

.spec-row-cyber:last-child {
  border-bottom: none;
}

.spec-label-cyber {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.spec-label-cyber i {
  color: var(--neon-red);
  width: 20px;
}

.spec-value-cyber {
  font-family: var(--font-display);
  font-weight: 600;
  color: var(--text-primary);
}

.plan-footer-cyber {
  padding: 0 30px 30px;
}

/* Info Box */
.info-box-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  position: relative;
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.info-header-cyber {
  background: rgba(255, 0, 60, 0.1);
  padding: 20px 30px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  display: flex;
  align-items: center;
  gap: 15px;
  font-family: var(--font-display);
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.info-header-cyber i {
  color: var(--neon-red);
  font-size: 1.2rem;
}

.info-body-cyber {
  padding: 30px;
}

.info-list-cyber {
  list-style: none;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.info-list-cyber li {
  display: flex;
  align-items: center;
  gap: 12px;
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.info-list-cyber li i {
  color: #00ff00;
  font-size: 1.1rem;
}

/* ============================================
   CHECKOUT PAGE - CYBER
   ============================================ */

.checkout-grid-cyber {
  display: grid;
  grid-template-columns: 1fr 450px;
  gap: 40px;
  padding: 40px 0;
}

.checkout-form-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.form-header-cyber {
  background: rgba(255, 0, 60, 0.1);
  padding: 25px 30px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  display: flex;
  align-items: center;
  gap: 15px;
}

.form-header-cyber i {
  color: var(--neon-red);
  font-size: 1.5rem;
}

.form-header-cyber h3 {
  font-family: var(--font-display);
  font-size: 1.2rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.form-body-cyber {
  padding: 40px 30px;
}

.form-group-cyber {
  margin-bottom: 30px;
}

.form-group-cyber label {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 12px;
  font-family: var(--font-display);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: var(--text-secondary);
}

.form-group-cyber label i {
  color: var(--neon-red);
}

.form-input-cyber {
  width: 100%;
  padding: 15px 20px;
  background: rgba(255, 0, 60, 0.05);
  border: 1px solid rgba(255, 0, 60, 0.3);
  color: var(--text-primary);
  font-family: var(--font-body);
  font-size: 1.1rem;
  font-weight: 500;
  transition: all 0.3s;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.form-input-cyber:focus {
  outline: none;
  border-color: var(--neon-red);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.2);
  background: rgba(255, 0, 60, 0.1);
}

.form-hint-cyber {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 10px;
  font-size: 0.85rem;
  color: var(--text-dim);
}

/* Checkbox Cyber */
.checkbox-cyber {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  cursor: pointer;
  margin: 30px 0;
}

.checkbox-cyber input {
  display: none;
}

.checkmark-cyber {
  width: 24px;
  height: 24px;
  background: rgba(255, 0, 60, 0.1);
  border: 2px solid rgba(255, 0, 60, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  flex-shrink: 0;
  margin-top: 2px;
  clip-path: polygon(4px 0, 100% 0, 100% calc(100% - 4px), calc(100% - 4px) 100%, 0 100%, 0 4px);
}

.checkbox-cyber input:checked + .checkmark-cyber {
  background: var(--neon-red);
  border-color: var(--neon-red);
}

.checkbox-cyber input:checked + .checkmark-cyber::after {
  content: '\f00c';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  color: var(--dark-bg);
  font-size: 0.8rem;
}

.checkbox-text-cyber {
  font-size: 0.95rem;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* Turnstile Container */
.turnstile-box {
  margin: 30px 0;
  padding: 25px;
  background: rgba(255, 0, 60, 0.05);
  border: 1px solid rgba(255, 0, 60, 0.3);
  text-align: center;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.turnstile-status-cyber {
  margin-top: 15px;
  font-family: var(--font-display);
  font-size: 0.85rem;
  color: var(--text-dim);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
}

/* Order Summary */
.summary-cyber {
  position: sticky;
  top: 100px;
}

.summary-card-cyber {
  background: var(--card-bg);
  border: 2px solid var(--neon-red);
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
  box-shadow: 0 0 30px rgba(255, 0, 60, 0.2);
}

.summary-header-cyber {
  background: var(--neon-red);
  padding: 25px;
  text-align: center;
}

.summary-header-cyber h3 {
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--dark-bg);
}

.summary-body-cyber {
  padding: 30px;
}

.summary-plan-cyber {
  text-align: center;
  padding-bottom: 25px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  margin-bottom: 25px;
}

.summary-icon-cyber {
  width: 70px;
  height: 70px;
  background: rgba(255, 0, 60, 0.1);
  border: 2px solid var(--neon-red);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15px;
  font-size: 1.8rem;
  color: var(--neon-red);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
}

.summary-plan-cyber h4 {
  font-family: var(--font-display);
  font-size: 1.3rem;
  margin-bottom: 10px;
}

.summary-price-cyber {
  font-family: var(--font-display);
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--neon-red);
  text-shadow: 0 0 10px rgba(255, 0, 60, 0.5);
}

.summary-specs-cyber {
  margin-bottom: 25px;
}

.summary-row-cyber {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(255, 0, 60, 0.1);
  font-size: 0.95rem;
}

.summary-row-cyber span:first-child {
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 10px;
}

.summary-row-cyber span:first-child i {
  color: var(--neon-red);
  width: 18px;
}

.summary-total-cyber {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20px;
  border-top: 2px solid var(--neon-red);
  font-family: var(--font-display);
  font-size: 1.2rem;
  font-weight: 700;
  text-transform: uppercase;
}

.summary-total-cyber span:last-child {
  color: var(--neon-red);
  font-size: 1.5rem;
  text-shadow: 0 0 10px rgba(255, 0, 60, 0.5);
}

/* ============================================
   PAYMENT PAGE - CYBER
   ============================================ */

.payment-status-cyber {
  text-align: center;
  padding: 50px;
  background: var(--card-bg);
  border: 2px solid rgba(255, 0, 60, 0.3);
  margin-bottom: 40px;
  position: relative;
  clip-path: polygon(30px 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0 30px);
}

.status-icon-cyber {
  width: 100px;
  height: 100px;
  background: rgba(234, 179, 8, 0.1);
  border: 3px solid #eab308;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 25px;
  font-size: 2.5rem;
  color: #eab308;
  box-shadow: 0 0 30px rgba(234, 179, 8, 0.3);
  animation: pulse-status 2s infinite;
}

@keyframes pulse-status {
  0%, 100% { transform: scale(1); box-shadow: 0 0 30px rgba(234, 179, 8, 0.3); }
  50% { transform: scale(1.05); box-shadow: 0 0 50px rgba(234, 179, 8, 0.5); }
}

.status-icon-cyber.success {
  background: rgba(0, 255, 0, 0.1);
  border-color: #00ff00;
  color: #00ff00;
  box-shadow: 0 0 30px rgba(0, 255, 0, 0.3);
  animation: pulse-success 2s infinite;
}

@keyframes pulse-success {
  0%, 100% { box-shadow: 0 0 30px rgba(0, 255, 0, 0.3); }
  50% { box-shadow: 0 0 50px rgba(0, 255, 0, 0.5); }
}

.status-icon-cyber.error {
  background: rgba(255, 0, 60, 0.1);
  border-color: var(--neon-red);
  color: var(--neon-red);
}

.payment-grid-cyber {
  display: grid;
  grid-template-columns: 1fr 450px;
  gap: 40px;
}

.qr-container-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
}

.qr-header-cyber {
  background: rgba(255, 0, 60, 0.1);
  padding: 20px 30px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: var(--font-display);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.qr-header-cyber i {
  color: var(--neon-red);
  margin-right: 10px;
}

.qr-body-cyber {
  padding: 40px;
  text-align: center;
}

.qr-display-cyber {
  background: white;
  padding: 30px;
  display: inline-block;
  margin-bottom: 30px;
  border: 3px solid var(--neon-red);
  box-shadow: 0 0 30px rgba(255, 0, 60, 0.3);
}

.qr-instructions-cyber {
  text-align: left;
}

.qr-instructions-cyber h4 {
  font-family: var(--font-display);
  font-size: 1rem;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--neon-red);
}

.qr-instructions-cyber ol {
  padding-left: 25px;
  color: var(--text-secondary);
  line-height: 2;
}

.qr-instructions-cyber li strong {
  color: var(--text-primary);
}

/* Payment Details */
.details-cyber {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.detail-card-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.detail-header-cyber {
  background: rgba(255, 0, 60, 0.1);
  padding: 18px 25px;
  border-bottom: 1px solid rgba(255, 0, 60, 0.2);
  font-family: var(--font-display);
  font-size: 0.9rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.detail-body-cyber {
  padding: 25px;
}

.detail-row-cyber {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(255, 0, 60, 0.1);
  font-size: 0.95rem;
}

.detail-row-cyber:last-child {
  border-bottom: none;
}

.detail-row-cyber.total {
  padding-top: 15px;
  margin-top: 5px;
  border-top: 2px solid var(--neon-red);
  border-bottom: none;
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 700;
}

.detail-row-cyber.total .value {
  color: var(--neon-red);
  font-size: 1.3rem;
  text-shadow: 0 0 10px rgba(255, 0, 60, 0.5);
}

/* Timer Card */
.timer-card-cyber {
  background: linear-gradient(135deg, rgba(255, 0, 60, 0.1) 0%, rgba(255, 0, 60, 0.05) 100%);
  border: 2px solid var(--neon-red);
  padding: 25px;
  display: flex;
  align-items: center;
  gap: 20px;
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.timer-card-cyber i {
  font-size: 2.5rem;
  color: var(--neon-red);
  animation: pulse 1s infinite;
}

.timer-display-cyber {
  font-family: var(--font-display);
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--neon-red);
  text-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
  line-height: 1;
}

/* Help Card */
.help-card-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  padding: 25px;
  display: flex;
  align-items: center;
  gap: 20px;
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.help-card-cyber i {
  font-size: 2.5rem;
  color: var(--neon-red);
}

/* ============================================
   SUCCESS PAGE - CYBER
   ============================================ */

.success-section-cyber {
  padding: 150px 0 100px;
  text-align: center;
}

.success-icon-cyber {
  width: 120px;
  height: 120px;
  background: rgba(0, 255, 0, 0.1);
  border: 4px solid #00ff00;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40px;
  font-size: 3.5rem;
  color: #00ff00;
  box-shadow: 0 0 40px rgba(0, 255, 0, 0.4);
  animation: success-pulse 2s infinite;
}

@keyframes success-pulse {
  0%, 100% { transform: scale(1); box-shadow: 0 0 40px rgba(0, 255, 0, 0.4); }
  50% { transform: scale(1.05); box-shadow: 0 0 60px rgba(0, 255, 0, 0.6); }
}

.success-title-cyber {
  font-family: var(--font-display);
  font-size: 3rem;
  font-weight: 900;
  text-transform: uppercase;
  margin-bottom: 20px;
}

.success-title-cyber span {
  color: var(--neon-red);
  text-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
}

/* Credentials */
.credentials-cyber {
  max-width: 700px;
  margin: 50px auto;
  background: var(--card-bg);
  border: 2px solid var(--neon-red);
  clip-path: polygon(25px 0, 100% 0, 100% calc(100% - 25px), calc(100% - 25px) 100%, 0 100%, 0 25px);
  box-shadow: 0 0 40px rgba(255, 0, 60, 0.2);
}

.credentials-header-cyber {
  background: var(--neon-red);
  padding: 25px;
  display: flex;
  align-items: center;
  gap: 15px;
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: var(--dark-bg);
}

.credentials-body-cyber {
  padding: 30px;
}

.credential-item-cyber {
  display: flex;
  align-items: center;
  gap: 20px;
  padding: 20px;
  background: rgba(255, 0, 60, 0.05);
  border: 1px solid rgba(255, 0, 60, 0.2);
  margin-bottom: 15px;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
  transition: all 0.3s;
}

.credential-item-cyber:hover {
  border-color: var(--neon-red);
  background: rgba(255, 0, 60, 0.1);
  transform: translateX(5px);
}

.credential-icon-cyber {
  width: 50px;
  height: 50px;
  background: rgba(255, 0, 60, 0.2);
  border: 2px solid var(--neon-red);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--neon-red);
  font-size: 1.3rem;
  flex-shrink: 0;
  clip-path: polygon(5px 0, 100% 0, 100% calc(100% - 5px), calc(100% - 5px) 100%, 0 100%, 0 5px);
}

.credential-info-cyber {
  flex-grow: 1;
  text-align: left;
}

.credential-label-cyber {
  font-family: var(--font-display);
  font-size: 0.75rem;
  color: var(--text-dim);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 5px;
}

.credential-value-cyber {
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  word-break: break-all;
}

.credential-value-cyber.password {
  display: flex;
  align-items: center;
  gap: 15px;
}

.btn-icon-cyber {
  width: 36px;
  height: 36px;
  background: rgba(255, 0, 60, 0.2);
  border: 1px solid var(--neon-red);
  color: var(--neon-red);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  clip-path: polygon(3px 0, 100% 0, 100% calc(100% - 3px), calc(100% - 3px) 100%, 0 100%, 0 3px);
}

.btn-icon-cyber:hover {
  background: var(--neon-red);
  color: var(--dark-bg);
}

/* Steps */
.steps-cyber {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
  max-width: 900px;
  margin: 50px auto;
}

.step-card-cyber {
  background: var(--card-bg);
  border: 1px solid rgba(255, 0, 60, 0.3);
  padding: 40px 30px;
  position: relative;
  transition: all 0.3s;
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.step-card-cyber::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3px;
  background: var(--neon-red);
  transform: scaleX(0);
  transition: transform 0.3s;
}

.step-card-cyber:hover {
  transform: translateY(-5px);
  border-color: var(--neon-red);
}

.step-card-cyber:hover::before {
  transform: scaleX(1);
}

.step-number-cyber {
  width: 50px;
  height: 50px;
  background: var(--neon-red);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 900;
  color: var(--dark-bg);
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.5);
  clip-path: polygon(5px 0, 100% 0, 100% calc(100% - 5px), calc(100% - 5px) 100%, 0 100%, 0 5px);
}

.step-card-cyber h4 {
  font-family: var(--font-display);
  font-size: 1.1rem;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.step-card-cyber p {
  color: var(--text-secondary);
  font-size: 0.95rem;
}

/* Warning Box */
.warning-cyber {
  max-width: 700px;
  margin: 40px auto;
  background: rgba(234, 179, 8, 0.1);
  border: 2px solid #eab308;
  padding: 25px 30px;
  display: flex;
  align-items: center;
  gap: 20px;
  text-align: left;
  clip-path: polygon(15px 0, 100% 0, 100% calc(100% - 15px), calc(100% - 15px) 100%, 0 100%, 0 15px);
}

.warning-cyber i {
  font-size: 2rem;
  color: #eab308;
  animation: pulse 2s infinite;
}

.warning-cyber strong {
  color: #eab308;
  font-family: var(--font-display);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Action Buttons */
.actions-cyber {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 40px;
}

/* ============================================
   FOOTER - CYBER
   ============================================ */

.cyber-footer {
  background: var(--darker-bg);
  border-top: 2px solid var(--neon-red);
  padding: 80px 0 40px;
  margin-top: 100px;
  position: relative;
  box-shadow: 0 -10px 40px rgba(255, 0, 60, 0.1);
}

.cyber-footer::before {
  content: '';
  position: absolute;
  top: -2px;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--neon-red), transparent);
  animation: scanline 4s linear infinite;
}

.footer-grid-cyber {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 60px;
  margin-bottom: 60px;
}

.footer-brand-cyber h3 {
  font-family: var(--font-display);
  font-size: 2rem;
  font-weight: 900;
  text-transform: uppercase;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  gap: 15px;
}

.footer-brand-cyber h3 i {
  color: var(--neon-red);
  font-size: 2.2rem;
  animation: pulse-glow 2s infinite;
}

.footer-brand-cyber p {
  color: var(--text-secondary);
  line-height: 1.8;
  font-size: 1.05rem;
}

.footer-links-cyber h4 {
  font-family: var(--font-display);
  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 25px;
  color: var(--neon-red);
}

.footer-links-cyber a {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--text-secondary);
  text-decoration: none;
  margin-bottom: 15px;
  font-size: 0.95rem;
  transition: all 0.3s;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.footer-links-cyber a:hover {
  color: var(--neon-red);
  transform: translateX(5px);
  text-shadow: 0 0 10px rgba(255, 0, 60, 0.5);
}

.footer-links-cyber a::before {
  content: '>';
  font-family: var(--font-display);
  color: var(--neon-red);
  font-weight: 700;
}

.footer-bottom-cyber {
  padding-top: 40px;
  border-top: 1px solid rgba(255, 0, 60, 0.2);
  text-align: center;
  font-family: var(--font-display);
  font-size: 0.9rem;
  color: var(--text-dim);
  text-transform: uppercase;
  letter-spacing: 2px;
}

/* ============================================
   TOAST NOTIFICATIONS - CYBER
   ============================================ */

.toast-cyber {
  position: fixed;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%) translateY(100px);
  background: var(--card-bg);
  border: 2px solid var(--neon-red);
  padding: 20px 30px;
  display: flex;
  align-items: center;
  gap: 15px;
  font-family: var(--font-display);
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  box-shadow: 0 10px 40px rgba(255, 0, 60, 0.3);
  z-index: 9999;
  opacity: 0;
  transition: all 0.3s;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}

.toast-cyber.show {
  transform: translateX(-50%) translateY(0);
  opacity: 1;
}

.toast-cyber.success {
  border-color: #00ff00;
  color: #00ff00;
}

.toast-cyber.error {
  border-color: var(--neon-red);
  color: var(--neon-red);
}

/* ============================================
   RESPONSIVE
   ============================================ */

@media (max-width: 1200px) {
  .checkout-grid-cyber,
  .payment-grid-cyber {
    grid-template-columns: 1fr;
  }
  
  .summary-cyber {
    position: static;
  }
}

@media (max-width: 992px) {
  .hero-content-cyber,
  .stats-grid-cyber,
  .steps-cyber {
    grid-template-columns: 1fr;
  }
  
  .footer-grid-cyber {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .hero-title-cyber {
    font-size: 2.5rem;
  }
}

@media (max-width: 768px) {
  .nav-links-cyber {
    display: none;
  }
  
  .hero-title-cyber {
    font-size: 2rem;
  }
  
  .section-title-cyber {
    font-size: 1.8rem;
  }
  
  .footer-grid-cyber {
    grid-template-columns: 1fr;
  }
  
  .cta-box {
    padding: 40px 20px;
  }
  
  .plan-card-cyber.featured {
    transform: none;
  }
  
  .plan-card-cyber.featured:hover {
    transform: translateY(-10px);
  }
}

/* Loading Animation */
.cyber-loader {
  width: 50px;
  height: 50px;
  border: 3px solid rgba(255, 0, 60, 0.2);
  border-top-color: var(--neon-red);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  box-shadow: 0 0 20px rgba(255, 0, 60, 0.3);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Glitch Effect Class */
.glitch-active {
  animation: glitch-skew 0.3s infinite;
}

@keyframes glitch-skew {
  0% { transform: skew(0deg); }
  20% { transform: skew(-2deg); }
  40% { transform: skew(2deg); }
  60% { transform: skew(-1deg); }
  80% { transform: skew(1deg); }
  100% { transform: skew(0deg); }
}
